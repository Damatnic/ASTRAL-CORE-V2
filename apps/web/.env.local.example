# ASTRAL CORE V2 - Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# Database Configuration (PostgreSQL Required for Production)
DATABASE_URL="postgresql://postgres:password@localhost:5432/astralcore?schema=public"
DIRECT_URL="postgresql://postgres:password@localhost:5432/astralcore?schema=public"

# For production with connection pooling:
# DATABASE_URL="postgresql://user:pass@host:port/db?pgbouncer=true&connect_timeout=15"
# DIRECT_URL="postgresql://user:pass@host:port/db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET=""  # Generate with: openssl rand -base64 32

# Auth0 Configuration (REQUIRED - GET NEW CREDENTIALS!)
# The previous credentials were compromised and must be rotated
AUTH0_CLIENT_ID=""
AUTH0_CLIENT_SECRET=""
AUTH0_ISSUER_BASE_URL=""

# Optional: Monitoring & Analytics
NEXT_PUBLIC_SENTRY_DSN=""
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# Optional: Email Service
EMAIL_SERVER=""
EMAIL_FROM=""

# Optional: Redis for Caching/Sessions
REDIS_URL=""

# Feature Flags
ENABLE_CRISIS_CHAT="true"
ENABLE_AI_THERAPY="true"
ENABLE_GAMIFICATION="true"

# Security Settings
RATE_LIMIT_ENABLED="true"
ENCRYPTION_ENABLED="true"
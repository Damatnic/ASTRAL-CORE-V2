# Web App Environment Configuration
# This file contains web-specific environment variables
# Base configuration should be in root .env file

# ===================================================================
# WEB APP CONFIGURATION
# ===================================================================
NEXT_PUBLIC_APP_NAME="Astral Core"
NEXT_PUBLIC_APP_VERSION="2.0.0"
NEXT_PUBLIC_APP_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_WS_URL="ws://localhost:8080"
NEXT_PUBLIC_GRAPHQL_URL="http://localhost:3000/graphql"

# ===================================================================
# WEB AUTHENTICATION
# ===================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-32-chars-min"
NEXT_PUBLIC_AUTH_PROVIDERS="credentials,google,facebook"
NEXT_PUBLIC_SESSION_TIMEOUT_MINUTES="30"
NEXT_PUBLIC_REMEMBER_ME_ENABLED="true"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# ===================================================================
# WEB CRISIS FEATURES
# ===================================================================
NEXT_PUBLIC_CRISIS_CHAT_ENABLED="true"
NEXT_PUBLIC_EMERGENCY_RESOURCES_ENABLED="true"
NEXT_PUBLIC_CRISIS_BUTTON_ENABLED="true"
NEXT_PUBLIC_VOLUNTEER_CHAT_ENABLED="true"
NEXT_PUBLIC_PEER_SUPPORT_ENABLED="true"

# ===================================================================
# WEB FEATURES
# ===================================================================
NEXT_PUBLIC_MOOD_TRACKER_ENABLED="true"
NEXT_PUBLIC_JOURNAL_ENABLED="true"
NEXT_PUBLIC_RESOURCES_ENABLED="true"
NEXT_PUBLIC_COMMUNITY_ENABLED="true"
NEXT_PUBLIC_EVENTS_ENABLED="true"
NEXT_PUBLIC_BLOG_ENABLED="true"

# ===================================================================
# WEB UI CONFIGURATION
# ===================================================================
NEXT_PUBLIC_THEME_MODE="system"
NEXT_PUBLIC_DEFAULT_THEME="light"
NEXT_PUBLIC_COLOR_SCHEME="calming"
NEXT_PUBLIC_FONT_FAMILY="Inter"
NEXT_PUBLIC_ANIMATIONS_ENABLED="true"

# ===================================================================
# WEB PERFORMANCE
# ===================================================================
NEXT_PUBLIC_IMAGE_OPTIMIZATION="true"
NEXT_PUBLIC_LAZY_LOADING="true"
NEXT_PUBLIC_PREFETCH_LINKS="true"
NEXT_PUBLIC_SERVICE_WORKER_ENABLED="true"
NEXT_PUBLIC_PWA_ENABLED="true"

# ===================================================================
# WEB SEO & METADATA
# ===================================================================
NEXT_PUBLIC_SITE_TITLE="Astral Core - Mental Health Support"
NEXT_PUBLIC_SITE_DESCRIPTION="24/7 mental health support and crisis intervention"
NEXT_PUBLIC_SITE_KEYWORDS="mental health,crisis support,therapy,counseling"
NEXT_PUBLIC_OG_IMAGE="/og-image.png"
NEXT_PUBLIC_TWITTER_HANDLE="@astralcore"

# ===================================================================
# WEB ANALYTICS & MONITORING
# ===================================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"
NEXT_PUBLIC_HOTJAR_ID="xxxxxxx"
NEXT_PUBLIC_CLARITY_ID="xxxxxxxxxx"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn"

# ===================================================================
# WEB SECURITY
# ===================================================================
NEXT_PUBLIC_CSP_ENABLED="true"
NEXT_PUBLIC_FRAME_ANCESTORS="'none'"
NEXT_PUBLIC_XSS_PROTECTION="true"
NEXT_PUBLIC_HSTS_ENABLED="true"
NEXT_PUBLIC_SECURE_COOKIES="true"

# Security Headers
NEXT_PUBLIC_PERMISSIONS_POLICY="camera=(), microphone=(), geolocation=()"
NEXT_PUBLIC_REFERRER_POLICY="strict-origin-when-cross-origin"

# ===================================================================
# WEB LOCALIZATION
# ===================================================================
NEXT_PUBLIC_DEFAULT_LOCALE="en-US"
NEXT_PUBLIC_SUPPORTED_LOCALES="en-US,es-ES,fr-FR,de-DE,pt-BR,zh-CN,ar-SA"
NEXT_PUBLIC_LOCALE_DETECTION="true"
NEXT_PUBLIC_LOCALE_COOKIE_NAME="locale"

# ===================================================================
# WEB ACCESSIBILITY
# ===================================================================
NEXT_PUBLIC_A11Y_ENABLED="true"
NEXT_PUBLIC_SKIP_NAVIGATION="true"
NEXT_PUBLIC_ARIA_LIVE_REGIONS="true"
NEXT_PUBLIC_KEYBOARD_NAVIGATION="true"
NEXT_PUBLIC_FOCUS_INDICATORS="true"

# ===================================================================
# WEB INTEGRATIONS
# ===================================================================
# Chat Widget
NEXT_PUBLIC_INTERCOM_APP_ID="your-intercom-app-id"
NEXT_PUBLIC_ZENDESK_KEY="your-zendesk-key"
NEXT_PUBLIC_CRISP_WEBSITE_ID="your-crisp-id"

# Payment Processing
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxx"
STRIPE_SECRET_KEY="sk_test_xxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxx"

# Email Service
NEXT_PUBLIC_EMAILJS_SERVICE_ID="service_xxxxx"
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID="template_xxxxx"
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY="public_xxxxx"

# ===================================================================
# WEB CONTENT MANAGEMENT
# ===================================================================
NEXT_PUBLIC_CMS_ENABLED="false"
NEXT_PUBLIC_CMS_PROVIDER="contentful"
CONTENTFUL_SPACE_ID="your-space-id"
CONTENTFUL_ACCESS_TOKEN="your-access-token"
CONTENTFUL_PREVIEW_TOKEN="your-preview-token"

# ===================================================================
# WEB CACHING
# ===================================================================
NEXT_PUBLIC_CACHE_CONTROL="public, max-age=3600"
NEXT_PUBLIC_STALE_WHILE_REVALIDATE="86400"
NEXT_PUBLIC_CDN_URL="https://cdn.astralcore.app"
NEXT_PUBLIC_STATIC_CACHE_DURATION="31536000"

# ===================================================================
# WEB DEVELOPMENT
# ===================================================================
NEXT_PUBLIC_DEV_TOOLS="false"
NEXT_PUBLIC_DEBUG_MODE="false"
NEXT_PUBLIC_API_MOCKING="false"
NEXT_PUBLIC_SHOW_DRAFT_CONTENT="false"
ANALYZE_BUNDLE="false"
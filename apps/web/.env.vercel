# Vercel Deployment Environment Variables
# These are the minimal required variables for a successful deployment

# Database (required for Prisma)
DATABASE_URL="postgresql://postgres:password@localhost:5432/astralcore"

# NextAuth (required)
NEXTAUTH_SECRET="crisis-platform-jwt-secret-production-key-2024-v2"
NEXTAUTH_URL="https://astralcore.vercel.app"

# JWT Secret (fallback)
JWT_SECRET="crisis-platform-jwt-secret-production-key-2024-v2"

# Node Environment
NODE_ENV="production"

# Skip environment validation during build
SKIP_ENV_VALIDATION="true"

# Optional OAuth (can be empty for deployment)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Sentry (optional for deployment)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="production"

# Basic app configuration
NEXT_PUBLIC_API_URL="https://astralcore.vercel.app/api"
NEXT_PUBLIC_WS_URL="wss://astralcore.vercel.app"
NEXT_PUBLIC_EMERGENCY_MODE="false"

# Crisis support (can be empty for initial deployment)
CRISIS_988_API_KEY=""
CRISIS_TEXT_API_KEY=""
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Feature flags (enable basic features)
FEATURE_AI_RISK_ASSESSMENT="false"
FEATURE_VOLUNTEER_MATCHING="false"
FEATURE_EMERGENCY_ESCALATION="true"
FEATURE_CRISIS_CHAT="true"
FEATURE_OFFLINE_MODE="false"

# Disable features that require external services
ENABLE_TEST_MODE="false"
MAINTENANCE_MODE="false"
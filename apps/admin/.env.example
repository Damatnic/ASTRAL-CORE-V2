# Admin Panel Environment Configuration
# This file contains admin-specific environment variables
# Base configuration should be in root .env file

# ===================================================================
# ADMIN PANEL CONFIGURATION
# ===================================================================
NEXT_PUBLIC_APP_NAME="Astral Core Admin"
NEXT_PUBLIC_APP_VERSION="2.0.0"
NEXT_PUBLIC_APP_ENV="development"

# Admin API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001/api"
NEXT_PUBLIC_WS_URL="ws://localhost:8080"
ADMIN_API_KEY="your-admin-api-key-here"

# ===================================================================
# ADMIN AUTHENTICATION
# ===================================================================
ADMIN_SESSION_SECRET="your-admin-session-secret-32-chars"
ADMIN_2FA_ENABLED="true"
ADMIN_SESSION_TIMEOUT_MINUTES="30"
ADMIN_MAX_LOGIN_ATTEMPTS="5"

# ===================================================================
# ADMIN PERMISSIONS
# ===================================================================
SUPER_ADMIN_EMAILS="admin@example.com,superadmin@example.com"
ADMIN_ROLE_MANAGEMENT_ENABLED="true"
ADMIN_AUDIT_LOG_ENABLED="true"

# ===================================================================
# CRISIS MANAGEMENT DASHBOARD
# ===================================================================
CRISIS_DASHBOARD_ENABLED="true"
CRISIS_ALERT_THRESHOLD="high"
VOLUNTEER_MANAGEMENT_ENABLED="true"
REAL_TIME_MONITORING_ENABLED="true"

# ===================================================================
# ADMIN MONITORING
# ===================================================================
ADMIN_METRICS_ENABLED="true"
ADMIN_PERFORMANCE_TRACKING="true"
ADMIN_ERROR_REPORTING="true"
ADMIN_ACTIVITY_LOGGING="true"

# ===================================================================
# ADMIN INTEGRATIONS
# ===================================================================
# Analytics Dashboard
ADMIN_ANALYTICS_PROVIDER="mixpanel"
ADMIN_ANALYTICS_KEY="your-admin-analytics-key"

# Reporting System
ADMIN_REPORT_GENERATION_ENABLED="true"
ADMIN_REPORT_STORAGE_PATH="/reports"
ADMIN_REPORT_RETENTION_DAYS="90"

# ===================================================================
# ADMIN UI CONFIGURATION
# ===================================================================
NEXT_PUBLIC_ADMIN_THEME="professional"
NEXT_PUBLIC_ADMIN_LOCALE="en-US"
NEXT_PUBLIC_ADMIN_TIMEZONE="UTC"
NEXT_PUBLIC_DATE_FORMAT="YYYY-MM-DD"
NEXT_PUBLIC_TIME_FORMAT="HH:mm:ss"

# ===================================================================
# ADMIN SECURITY
# ===================================================================
ADMIN_IP_WHITELIST="127.0.0.1,::1"
ADMIN_RATE_LIMIT_ENABLED="true"
ADMIN_RATE_LIMIT_MAX_REQUESTS="100"
ADMIN_RATE_LIMIT_WINDOW_MS="60000"

# ===================================================================
# ADMIN NOTIFICATIONS
# ===================================================================
ADMIN_EMAIL_NOTIFICATIONS="true"
ADMIN_SMS_NOTIFICATIONS="false"
ADMIN_SLACK_NOTIFICATIONS="true"
ADMIN_SLACK_WEBHOOK="https://hooks.slack.com/services/your-webhook"

# ===================================================================
# ADMIN DATA MANAGEMENT
# ===================================================================
ADMIN_DATA_EXPORT_ENABLED="true"
ADMIN_DATA_IMPORT_ENABLED="true"
ADMIN_BULK_OPERATIONS_ENABLED="true"
ADMIN_DATABASE_BACKUP_ACCESS="false"

# ===================================================================
# ADMIN DEVELOPMENT
# ===================================================================
ADMIN_DEBUG_MODE="false"
ADMIN_DEV_TOOLS_ENABLED="false"
ADMIN_API_EXPLORER_ENABLED="false"
ADMIN_DATABASE_VIEWER_ENABLED="false"
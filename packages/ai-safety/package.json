{
  "name": "@astralcore/ai-safety",
  "version": "2.0.0",
  "description": "ASTRAL_CORE 2.0 AI Safety & Moderation System - Protecting Users & Platform Integrity",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "require": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "train:models": "node scripts/train-safety-models.js"
  },
  "dependencies": {
    "natural": "^6.12.0",
    "compromise": "^14.10.0",
    "sentiment": "^5.0.2",
    "profanity-check": "^0.0.3",
    "ioredis": "^5.3.2",
    "@astralcore/database": "workspace:*",
    "@astralcore/crisis": "workspace:*",
    "@astralcore/volunteer": "workspace:*"
  },
  "devDependencies": {
    "@types/natural": "^5.1.3",
    "@types/node": "^20.19.13",
    "jest": "^29.7.0",
    "typescript": "^5.7.2"
  }
}

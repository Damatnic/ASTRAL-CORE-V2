{
  "name": "@astralcore/crisis",
  "version": "2.0.0",
  "description": "ASTRAL_CORE 2.0 Crisis Intervention Engine - Zero-Knowledge, <200ms Response",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "require": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "perf:test": "ts-node performance-tests/run-tests.ts",
    "perf:websocket": "ts-node performance-tests/websocket-performance.ts"
  },
  "dependencies": {
    "@astralcore/database": "workspace:*",
    "nanoid": "^5.0.4",
    "ioredis": "^5.3.2",
    "twilio": "^5.9.0",
    "ws": "^8.18.0",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "@types/ws": "^8.5.12",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
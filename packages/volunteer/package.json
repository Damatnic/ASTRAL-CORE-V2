{
  "name": "@astralcore/volunteer",
  "version": "2.0.0",
  "description": "ASTRAL_CORE 2.0 Volunteer Management Platform - Training, Matching & Support",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "require": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "training:sync": "node scripts/sync-training-modules.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "twilio": "^5.9.0",
    "node-cron": "^3.0.3",
    "@astralcore/database": "workspace:*",
    "@astralcore/crisis": "workspace:*",
    "@astralcore/tether": "workspace:*"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.13",
    "@types/node-cron": "^2.0.4",
    "jest": "^29.7.0",
    "typescript": "^5.7.2"
  }
}

{
  "name": "@astralcore/websocket",
  "version": "2.0.0",
  "description": "ASTRAL_CORE 2.0 WebSocket Communication Package for Real-time Crisis Support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "websocket",
    "real-time",
    "communication",
    "crisis-support",
    "messaging",
    "low-latency"
  ],
  "author": "ASTRAL_CORE Team",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.0",
    "socket.io": "^4.7.0",
    "@astralcore/database": "workspace:*",
    "@astralcore/crisis": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/ws": "^8.5.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/astral-core/astral-core-2.0.git",
    "directory": "packages/websocket"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "require": "./src/*.ts",
      "default": "./src/*.ts"
    }
  }
}

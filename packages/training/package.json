{
  "name": "@astralcore/training",
  "version": "2.0.0",
  "description": "ASTRAL_CORE 2.0 Training and Education Package for Crisis Intervention",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "training",
    "education",
    "certification",
    "crisis-intervention",
    "volunteer-development",
    "mental-health"
  ],
  "author": "ASTRAL_CORE Team",
  "license": "MIT",
  "dependencies": {
    "@astralcore/database": "workspace:*",
    "@astralcore/volunteer": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/astral-core/astral-core-2.0.git",
    "directory": "packages/training"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "require": "./src/*.ts",
      "default": "./src/*.ts"
    }
  }
}

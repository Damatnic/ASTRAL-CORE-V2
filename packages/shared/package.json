{
  "name": "@astralcore/shared",
  "version": "2.0.0",
  "description": "ASTRAL_CORE 2.0 Shared Utilities and Types - Mental Health Platform Commons",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts",

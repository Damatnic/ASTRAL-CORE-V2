    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "zod": "^4.1.5",
    "date-fns": "^4.1.0",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "jest": "^29.7.0",
    "typescript": "^5.7.2"
  }
}
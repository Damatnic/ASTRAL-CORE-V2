{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@astralcore/shared": ["./packages/shared/src"],
      "@astralcore/shared/*": ["./packages/shared/src/*"],
      "@astralcore/database": ["./packages/database/src"],
      "@astralcore/database/*": ["./packages/database/src/*"],
      "@astralcore/crisis": ["./packages/crisis/src"],
      "@astralcore/crisis/*": ["./packages/crisis/src/*"],
      "@astralcore/security": ["./packages/security/src"],
      "@astralcore/security/*": ["./packages/security/src/*"],
      "@astralcore/performance": ["./packages/performance/src"],
      "@astralcore/performance/*": ["./packages/performance/src/*"],
      "@astralcore/ai-safety": ["./packages/ai-safety/src"],
      "@astralcore/ai-safety/*": ["./packages/ai-safety/src/*"],
      "@astralcore/volunteer": ["./packages/volunteer/src"],
      "@astralcore/volunteer/*": ["./packages/volunteer/src/*"],
      "@astralcore/tether": ["./packages/tether/src"],
      "@astralcore/tether/*": ["./packages/tether/src/*"],
      "@astralcore/analytics": ["./packages/analytics/src"],
      "@astralcore/analytics/*": ["./packages/analytics/src/*"],
      "@astralcore/websocket": ["./packages/websocket/src"],
      "@astralcore/websocket/*": ["./packages/websocket/src/*"],
      "@astralcore/ui": ["./packages/ui/src"],
      "@astralcore/ui/*": ["./packages/ui/src/*"],
      "@astralcore/config": ["./packages/config/src"],
      "@astralcore/config/*": ["./packages/config/src/*"],
      "@astralcore/emergency": ["./packages/emergency/src"],
      "@astralcore/emergency/*": ["./packages/emergency/src/*"],
      "@astralcore/training": ["./packages/training/src"],
      "@astralcore/training/*": ["./packages/training/src/*"]
    },
    "types": ["node"],
    "exactOptionalPropertyTypes": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true
  }
}